{
  "name": "product-specs",
  "version": "1.0.0",
  "description": "Use [Fern](https://docs.buildwithfern.com/):",
  "main": "index.js",
  "scripts": {
    "openapi-build": "swagger-cli bundle src.yaml -o api.yaml -t yaml",
    "openapi-validate": "swagger-cli validate src.yaml && spectral lint api.yaml",
    "build-qase": "redocly bundle src/qase/src.yaml --output _build/qase/openapi.yaml",
    "test-qase": "npm run build && spectral lint _build/qase/openapi.yaml",
    "preview-qase": "npm run build-qase && redocly preview-docs _build/qase/openapi.yaml",
    "html-qase": "npm run build-qase && redocly build-docs _build/qase/openapi.yaml --output _build/qase/index.html",
    "build-petshop": "redocly bundle src/petshop/openapi.yaml --output _build/petshop/openapi.yaml",
    "test-petshop": "npm run build && spectral lint _build/petshop/openapi.yaml",
    "preview-petshop": "npm run build-petshop && redocly preview-docs _build/petshop/openapi.yaml",
    "html-pethshop": "npm run build-petshop && redocly build-docs _build/petshop/openapi.yaml --output _build/petshop/index.html",
    "clean": "rm -r _build",
    "deploy": "./ci/deploy.sh"
  },
  "author": "fluent-qa",
  "license": "ISC",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@redocly/cli": "^1.4.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "fern-api": "^0.14.3",
    "rdme": "^8.6.6"
  }
}
